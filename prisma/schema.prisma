// ==============================
// Prisma Client Generator
// ==============================
generator client {
  provider = "prisma-client"
  output   = "../generated"
}

// ==============================
// Database Connection
// ==============================
datasource db {
  provider = "postgresql"
}

// ==============================
// ENUMS
// ==============================
enum WishlistPriority {
  MANDATORY
  IF_POSSIBLE
  IF_MONEY
}

// ==============================
// USER MODEL
// ==============================
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  wishlistItems WishlistItem[]
  collection    Lego[]         @relation("UserCollection")
}

// ==============================
// LEGO MODEL
// ==============================
model Lego {
  id                 String  @id @default(uuid())
  imageUrl           String  @default("https://assets.lego.com/logos/v4.5.0/brand-lego.svg")
  name               String
  setNumber          String
  theme              String
  pieces             Int
  startingPrice      Int
  currentPrice       Int
  removedFromStoreOn String?

  wishlistItems WishlistItem[]
  collectors    User[]         @relation("UserCollection")
}

// ==============================
// WISHLIST MODEL
// ==============================
model WishlistItem {
  id       String           @id @default(cuid())
  userId   String
  legoId   String
  priority WishlistPriority @default(MANDATORY)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  lego Lego @relation(fields: [legoId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, legoId]) // ensures no duplicate wishlist entries
}
